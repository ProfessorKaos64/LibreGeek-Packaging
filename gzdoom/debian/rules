#!/usr/bin/make -f

TOP = $(shell pwd)

# Note: @EXTRA_OPTIONS@ set in build script

%:
	dh $@

override_dh_auto_configure:
	rm -rf build && mkdir build
	cd build && cmake .. \
		-DFORCE_INTERNAL_BZIP2=OFF \
		-DFORCE_INTERNAL_GME=OFF \
		$(FMOD) \
		$(OPENAL)

override_dh_auto_build:
	make -j4 -C build
