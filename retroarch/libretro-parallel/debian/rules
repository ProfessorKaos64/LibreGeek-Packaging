export DEB_CXXFLAGS_MAINT_STRIP=-O2
export DEB_CFLAGS_MAINT_STRIP=-O2

export CC=clang-3.8
export CXX=clang++-3.8

ARCH=$(shell dpkg-architecture -qDEB_HOST_ARCH)

# Needs to install lsb-release package
UBUNTU_VERSION=$(shell lsb_release -c | cut -f2)

ifeq ($(ARCH),armhf)
	ifeq ($(UBUNTU_VERSION),trusty)
		export CC=clang
		export CXX=clang++
		# For parallel
	else
		export CC=clang-3.8
		export CXX=clang++-3.8
		export DEB_CXXFLAGS_MAINT_STRIP=-O2 -fstack-protector-strong
		export DEB_CFLAGS_MAINT_STRIP=-O2 -fstack-protector-strong
		export DEB_CXXFLAGS_MAINT_APPEND=-fstack-protector
		export DEB_CFLAGS_MAINT_APPEND=-fstack-protector
	endif
	PLATFORM=platform="armv gles neon hardfloat"
endif

%:
	dh $@

override_dh_auto_build:
	#dh_auto_build -- $(PLATFORM)
	# Need to manually specify flags here for Parallel
	make \
		HAVE_PARALLEL_RSP=1 \
		WITH_DYNAREC=x86_64 \
		HAVE_PARALLEL \
		HAVE_VULKAN=1

override_dh_installdocs:
	dh_installdocs
	cd debian/libretro-*/usr/share/doc/libretro-*/ && mv COPYING cxd4-license
