export DEB_CXXFLAGS_MAINT_STRIP=-g -O2
export DEB_CFLAGS_MAINT_STRIP=-g -O2
export CC = /usr/bin/clang-3.8
export CXX = /usr/bin/clang++-3.8

ARCH=$(shell dpkg-architecture -qDEB_HOST_ARCH)

ifeq ($(ARCH),armhf)
	PLATFORM=platform="armv hardfloat"
endif

%:
	dh $@ --parallel

override_dh_auto_build:
	# MAME
	make OVERRIDE_CXX="clang++-3.8" OVERRIDE_CC="clang-3.8" SUBTARGET=arcade $(PLATFORM)
	# MESS
	make OVERRIDE_CXX="clang++-3.8" OVERRIDE_CC="clang-3.8" SUBTARGET=mess $(PLATFORM)

override_dh_auto_clean:
	dh_auto_clean
	rm -f -r 3rdparty/genie/bin/
	rm -f -r 3rdparty/genie/build/gmake.linux/obj/
