#!/usr/bin/make -f

export DEB_CXXFLAGS_MAINT_STRIP=-g -O2
export DEB_CFLAGS_MAINT_STRIP=-g -O2
export CC = /usr/bin/clang-3.8
export CXX = /usr/bin/clang++-3.8

arch=$(shell dpkg-architecture -qDEB_HOST_ARCH)

ifeq ($(arch),armhf)
	PLATFORM=PLATFORM="armv hardfloat"
endif

%:
	dh $@

override_dh_auto_build:
	# MAME
	make OVERRIDE_CXX="clang++-3.8" OVERRIDE_CC="clang-3.8" USELIBCO=1 SUBTARGET=arcade $(PLATFORM)
	# MESS
	make OVERRIDE_CXX="clang++-3.8" OVERRIDE_CC="clang-3.8" USELIBCO=1 SUBTARGET=mess $(PLATFORM)

override_dh_auto_clean:
	dh_auto_clean
	rm -rf 3rdparty/genie/bin/
	rm -rf 3rdparty/genie/build/gmake.linux/obj/
