export DEB_CXXFLAGS_MAINT_STRIP=-O2
export DEB_CFLAGS_MAINT_STRIP=-O2

%:
	dh $@ --parallel

override_dh_auto_build:
	$(MAKE) -f Makefile.libretro

override_dh_auto_clean:
	$(MAKE) -f Makefile.libretro clean
