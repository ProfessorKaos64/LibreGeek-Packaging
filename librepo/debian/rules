#!/usr/bin/make -f
# See: ./linuxBuild.sh

export DH_VERBOSE=1

%:
	dh $@

override_dh_auto_configure:
	rm -rf build && mkdir build
	cd build && cmake \
			-DCMAKE_VERBOSE_MAKEFILE=ON \
			-DCMAKE_BUILD_TYPE=Release \
			-DCMAKE_INSTALL_PREFIX=/usr \
			-DENABLE_DOCS=OFF \
			..
	make -C build
	make -C build test
